{
  "name": "@zen/router-adapters",
  "version": "0.0.0",
  "description": "Universal router hooks for all frameworks - React, Preact, Zen",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./react": {
      "types": "./dist/frameworks/react.d.ts",
      "import": "./dist/frameworks/react.js",
      "require": "./dist/frameworks/react.cjs"
    },
    "./preact": {
      "types": "./dist/frameworks/preact.d.ts",
      "import": "./dist/frameworks/preact.js",
      "require": "./dist/frameworks/preact.cjs"
    },
    "./zen": {
      "types": "./dist/frameworks/zen.d.ts",
      "import": "./dist/frameworks/zen.js",
      "require": "./dist/frameworks/zen.cjs"
    },
    "./core": {
      "types": "./dist/core/create-hooks.d.ts",
      "import": "./dist/core/create-hooks.js",
      "require": "./dist/core/create-hooks.cjs"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "bunup --entry 'src/index.ts' 'src/frameworks/*.ts' 'src/core/*.ts' --format esm,cjs --dts --target node --minify",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "zen",
    "router",
    "routing",
    "hooks",
    "react",
    "preact",
    "universal",
    "framework-agnostic"
  ],
  "author": "Sylphx <hi@sylphx.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SylphxAI/zen.git",
    "directory": "packages/zen-router-adapters"
  },
  "homepage": "https://github.com/SylphxAI/zen/tree/main/packages/zen-router-adapters#readme",
  "bugs": {
    "url": "https://github.com/SylphxAI/zen/issues"
  },
  "peerDependencies": {
    "@zen/router": "^0.0.0",
    "@zen/signal": "^0.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "preact": {
      "optional": true
    }
  },
  "devDependencies": {
    "@zen/router": "workspace:*",
    "@zen/signal": "workspace:*",
    "bunup": "^0.15.13",
    "react": "^19.2.0",
    "preact": "^10.27.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
